<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ClientKeyChangerController">
    <bottom>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="changePassSaveButton" mnemonicParsing="false" text="Save" />
                <Label fx:id="keyChangeErrorLabel" />
            </items>
        </ToolBar>
    </bottom>
    <center>
        <VBox fx:id="vBox" BorderPane.alignment="CENTER">
            <children>
                <Label text="New key" />
                <TextField fx:id="newKeyTextField" prefHeight="25.0" prefWidth="400.0" />
                <Label text="Repeat new key" />
                <TextField fx:id="repeatNewKeyTextField" prefHeight="25.0" prefWidth="400.0" />
            </children>
        </VBox>
    </center>
</BorderPane>
